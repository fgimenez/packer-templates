{
    "variables": {
        "iso_url": "http://cdimage.debian.org/debian-cd/current-live/amd64/iso-hybrid/debian-live-8.0.0-amd64-standard.iso"
        , "iso_checksum": "857a6a8a46d24821f1a3d655ac539ffc1d13c80e429db44721ca7cecb6a9ab4ede3a329921f2abf968c0312349cefcda4ab5471eeeed14e1fe9a2229d2509c46"
        , "iso_checksum_type": "sha512"
        , "user": "root"
        , "password": "packer"
        , "disk_size": 5000
        , "domain": ""
        , "ssh_timeout": "50000s"
    },

    "builders": [
        {
            "type": "qemu"
            , "iso_url": "{{user `iso_url`}}"
            , "iso_checksum": "{{user `iso_checksum`}}"
            , "iso_checksum_type": "{{user `iso_checksum_type`}}"

            , "type": "qemu"
            , "format": "qcow2"
            , "accelerator": "kvm"
            , "disk_size": "{{ user `disk_size`}}"
            , "disk_interface": "virtio"
            , "headless": true

            , "http_directory": "http"

            , "ssh_username": "{{ user `user`}}"
            , "ssh_password": "{{ user `password`}}"
            , "ssh_wait_timeout": "{{ user `ssh_timeout`}}"

            , "shutdown_command": "systemctl poweroff"

            , "http_directory": "http"

            , "boot_wait": "2s"
            , "boot_command": [
                "<enter><wait10>"
                , "user<enter><wait>"
                , "live<enter><wait><wait>"
                , "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/configure_ssh.sh -O /tmp/configure_ssh.sh ; chmod +x /tmp/configure_ssh.sh ; sudo /tmp/configure_ssh.sh<enter>"
            ]

        }
    ],

    "provisioners": [
        {
            "type": "file"
            , "source": "scripts/chroot.sh"
            , "destination": "/tmp/chroot.sh"
        },
        {
            "type": "file"
            , "source": "files/vagrant.pub"
            , "destination": "/tmp/vagrant.pub"
        },
        {
            "scripts": [
                "scripts/base.sh"
            ]
            , "type": "shell"
        }
    ],

    "post-processors": [{
        "output": "box/debian-jessie.box"
        , "type": "vagrant"
        , "vagrantfile_template": "./Vagrantfile.template"
    },
    {
        "type": "atlas"
        , "artifact": "kampka/debian"
        , "artifact_type": "vagrant.box"
        , "metadata": {
            "provider": "libvirt"
            , "version": "1.0"
            , "created_at": "{{timestamp}}"
        }
    }],

    "push": {
        "name": "kampka/debian"
    }
}
