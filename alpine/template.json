{
    "variables": {
        "iso_url": "http://dl-1.alpinelinux.org/alpine/v3.3/releases/x86_64/alpine-extended-3.3.0-x86_64.iso"
        , "iso_checksum": "deb320048dbc3bb4b8530e58f5fa3bc1cc9d9480290b50250998a8b1cc619d90"
        , "iso_checksum_type": "sha256"
        , "user": "root"
        , "password": "packer"
        , "disk_size": "5000"
        , "domain": ""
        , "ssh_timeout": "50000s"
    },

    "builders": [
        {
            "type": "qemu"
            , "iso_url": "{{user `iso_url`}}"
            , "iso_checksum": "{{user `iso_checksum`}}"
            , "iso_checksum_type": "{{user `iso_checksum_type`}}"

            , "type": "qemu"
            , "format": "qcow2"
            , "accelerator": "kvm"
            , "disk_size": "{{ user `disk_size`}}"
            , "disk_interface": "virtio"
            , "headless": false

            , "http_directory": "http"

            , "ssh_username": "{{ user `user`}}"
            , "ssh_password": "{{ user `password`}}"
            , "ssh_wait_timeout": "{{ user `ssh_timeout`}}"

            , "shutdown_command": "poweroff"

            , "http_directory": "http"

            , "boot_wait": "10s"
            , "boot_command": [
                "root<enter><wait>"
                , "apk add dhcpcd<enter><wait>"
                , "dhcpcd eth0<enter><wait5>"
                , "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/configure_ssh.sh -O /tmp/configure_ssh.sh ; chmod +x /tmp/configure_ssh.sh ; /bin/sh /tmp/configure_ssh.sh<enter>"
            ]
        }
    ],

    "provisioners": [
        {
            "type": "file"
            , "source": "scripts/chroot.sh"
            , "destination": "/tmp/chroot.sh"
        },
        {
            "type": "file"
            , "source": "files/vagrant.pub"
            , "destination": "/tmp/vagrant.pub"
        },
        {
            "scripts": [
                "scripts/base.sh"
            ]
            , "type": "shell"
        }
    ],

    "post-processors": [{
        "output": "box/alpine.box"
        , "type": "vagrant"
        , "vagrantfile_template": "./Vagrantfile.template"
        , "keep_input_artifact": true
    }, {
        "type": "atlas"
        , "artifact": "kampka/alpine"
        , "artifact_type": "vagrant.box"
        , "metadata": {
          "provider": "libvirt"
        }
    }],

    "push": {
      "name": "kampka/alpine"
    }
}
